{
  "name": "mvc-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate para estrutura MVC em JavaScript com PostgreSQL e testes",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "migrate-js": "node ./migrations/migrate_all.js",
    "migrate-sql": "node ./scripts/init.sql",
    "drop": "node ./migrations/drop_all.js",
    "populate": "node ./migrations/insert_all.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "init-db": "node scripts/runSQLScript.js"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.1"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.0",
    "pg-pool": "^3.10.0"
  }
}
