<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="AprendizAGRO - Plataforma de cursos da Bayer para o agronegócio">
    <meta name="keywords" content="cursos, agronegócio, Bayer, agricultura, tecnologia">
    <meta name="author" content="Bayer">
    
    <title><%= pageTitle %> | AprendizAGRO</title>
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/assets/favicon.ico">
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Global Styles -->
    <link rel="stylesheet" href="/css/global.css">
    
    <!-- Component Styles -->
    <link rel="stylesheet" href="/css/components/header.css">
    <link rel="stylesheet" href="/css/components/footer.css">
    
    <!-- Page-specific Styles -->
    <% if (typeof pageCSS !== 'undefined' && pageCSS) { %>
        <% if (Array.isArray(pageCSS)) { %>
            <% pageCSS.forEach(function(cssFile) { %>
                <link rel="stylesheet" href="/css/<%= cssFile %>">
            <% }); %>
        <% } else { %>
            <link rel="stylesheet" href="/css/<%= pageCSS %>">
        <% } %>
    <% } %>
    
    <!-- Open Graph Meta Tags -->
    <meta property="og:title" content="<%= pageTitle %> | AprendizAGRO">
    <meta property="og:description" content="Plataforma de cursos da Bayer para o agronegócio">
    <meta property="og:type" content="website">
    <meta property="og:url" content="<%= typeof currentUrl !== 'undefined' ? currentUrl : '' %>">
    
    <!-- Additional Head Content -->
    <% if (typeof additionalHead !== 'undefined') { %>
        <%- additionalHead %>
    <% } %>
</head>
<body>
    <!-- Header -->
    <%- include('../components/header') %>

    <!-- Main Content -->
    <main class="main-content">
        <!-- Content will be injected here -->
        <% if (typeof content !== 'undefined') { %>
            <%- include(content) %>
        <% } else { %>
            <!-- Default content if no specific content is provided -->
            <div class="container">
                <h1>Página não encontrada</h1>
                <p>O conteúdo solicitado não foi encontrado.</p>
            </div>
        <% } %>
    </main>

    <!-- Footer -->
    <%- include('../components/footer') %>

    <!-- Scripts -->
    <script src="/scripts/main.js"></script>
    
    <!-- Page-specific scripts -->
    <% if (typeof pageJS !== 'undefined' && pageJS) { %>
        <% if (Array.isArray(pageJS)) { %>
            <% pageJS.forEach(function(jsFile) { %>
                <script src="/scripts/<%= jsFile %>"></script>
            <% }); %>
        <% } else { %>
            <script src="/scripts/<%= pageJS %>"></script>
        <% } %>
    <% } %>
    
    <!-- Additional Scripts -->
    <% if (typeof additionalScripts !== 'undefined') { %>
        <%- additionalScripts %>
    <% } %>
    
    <!-- Analytics (opcional) -->
    <% if (typeof analytics !== 'undefined' && analytics) { %>
        <!-- Google Analytics ou outro código de tracking -->
    <% } %>
</body>
</html>