<!-- Dashboard Hero Section -->
<section class="dashboard-hero">
    <div class="container">
        <div class="welcome-section">
            <h1 id="welcome-message">Bem-vindo(a) ao AprendizAGRO!</h1>
            <p>Continue sua jornada de aprendizado no agronegócio</p>
        </div>
        <div class="dashboard-stats">
            <div class="stat-card">
                <div class="stat-number" id="completed-courses">0</div>
                <div class="stat-label">Cursos Concluídos</div>
            </div>
            <div class="stat-card">
                <div class="stat-number" id="in-progress-courses">0</div>
                <div class="stat-label">Em Progresso</div>
            </div>
            <div class="stat-card">
                <div class="stat-number" id="total-hours">0h</div>
                <div class="stat-label">Horas de Estudo</div>
            </div>
        </div>
    </div>
</section>

<!-- Trilhas Section -->
<section class="dashboard-section">
    <div class="container">
        <div class="section-header">
            <h2>Trilhas de Aprendizado</h2>
            <p>Escolha uma trilha para começar sua jornada</p>
        </div>
        
        <div class="loading" id="trails-loading">
            <div class="spinner"></div>
            <p>Carregando trilhas...</p>
        </div>
        
        <div class="trails-grid" id="trails-grid" style="display: none;">
            <!-- Trilhas serão carregadas aqui -->
        </div>
        
        <div class="error-message" id="trails-error" style="display: none;">
            <p>Erro ao carregar trilhas. <button onclick="loadTrails()" class="btn-link">Tentar novamente</button></p>
        </div>
    </div>
</section>

<!-- Progresso Atual Section -->
<section class="dashboard-section current-progress" id="current-progress-section" style="display: none;">
    <div class="container">
        <div class="section-header">
            <h2>Seu Progresso Atual</h2>
            <p>Continue de onde parou</p>
        </div>
        
        <div class="progress-grid" id="progress-grid">
            <!-- Progresso atual será carregado aqui -->
        </div>
    </div>
</section>

<!-- Modal para Trilha Selecionada -->
<div class="modal" id="trail-modal">
    <div class="modal-content">
        <div class="modal-header">
            <h3 id="modal-trail-title">Título da Trilha</h3>
            <button class="modal-close" onclick="closeTrailModal()">&times;</button>
        </div>
        <div class="modal-body">
            <p id="modal-trail-description">Descrição da trilha...</p>
            
            <div class="modules-section">
                <h4>Módulos desta Trilha:</h4>
                <div class="modules-list" id="modal-modules-list">
                    <!-- Módulos serão carregados aqui -->
                </div>
            </div>
            
            <div class="modal-actions">
                <button class="btn btn-secondary" onclick="closeTrailModal()">Cancelar</button>
                <button class="btn btn-primary" id="start-trail-btn" onclick="startTrail()">Iniciar Trilha</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal para Módulo Selecionado -->
<div class="modal" id="module-modal">
    <div class="modal-content">
        <div class="modal-header">
            <h3 id="modal-module-title">Título do Módulo</h3>
            <button class="modal-close" onclick="closeModuleModal()">&times;</button>
        </div>
        <div class="modal-body">
            <p id="modal-module-description">Descrição do módulo...</p>
            
            <div class="classes-section">
                <h4>Aulas deste Módulo:</h4>
                <div class="classes-list" id="modal-classes-list">
                    <!-- Aulas serão carregadas aqui -->
                </div>
            </div>
            
            <div class="modal-actions">
                <button class="btn btn-secondary" onclick="closeModuleModal()">Cancelar</button>
                <button class="btn btn-primary" id="start-module-btn" onclick="startModule()">Iniciar Módulo</button>
            </div>
        </div>
    </div>
</div>