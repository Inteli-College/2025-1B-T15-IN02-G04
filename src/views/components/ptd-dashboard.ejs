<script>
// Fun√ß√µes espec√≠ficas para PTD
function goToTrail(trailId) {
    if (trailId) {
        window.location.href = `/trilha/${trailId}`;
    }
}

function unfavoriteCard(cardId) {
    if (confirm('Deseja realmente remover este card dos favoritos?')) {
        window.Dashboard.unfavoriteCard(cardId);
    }
}

function downloadCard(cardId) {
    window.Dashboard.downloadCard(cardId);
}

// Carregar dados espec√≠ficos do PTD
document.addEventListener('DOMContentLoaded', function() {
    // Carregar trilhas ativas
    window.Dashboard.loadActiveTrails();
    
    // Carregar trilhas atribu√≠das
    window.Dashboard.loadAssignedTrails();
    
    // Carregar ranking
    window.Dashboard.loadPTDRanking();
    
    // Carregar cards favoritos
    window.Dashboard.loadFavoriteCards();
    
    // Event listeners para refresh
    document.getElementById('refresh-trails')?.addEventListener('click', function() {
        window.Dashboard.loadActiveTrails();
        window.Dashboard.loadAssignedTrails();
    });
    
    document.getElementById('refresh-favorites')?.addEventListener('click', function() {
        window.Dashboard.loadFavoriteCards();
    });
});
</script>